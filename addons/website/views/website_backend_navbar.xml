<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Front-end/Back-end integration -->
    <template groups="base.group_user" id="user_navbar" inherit_id="website.layout">
      <xpath expr="//body/div['id=wrawrap']" position="before">
        <t t-if="website and menu_data">
          <div id="website_editor_container" class="wb_hidden_xs">
            <nav id="website_main_menu_navbar" role="navigation">
              <ul id="oe_applications">
                <li class="dropdown active">
                  <a class="dropdown full hidden-xs" data-toggle="dropdown" href="#">
                    <i class="fa fa-th-large"/> WEBSITE
                    <b class="caret"/></a>
                  <ul class="dropdown-menu">
                    <li t-as="menu" t-foreach="menu_data['children']">
                      <t t-set="debug_param" t-value="'?&amp;debug=' if debug else ''"/>
                      <a t-att-class="'oe_menu_toggler' if menu.get('children') else 'oe_menu_leaf'" t-att-data-action-id="menu['action'] and menu['action'].split(',')[1] or ''" t-att-data-action-model="menu['action'] and menu['action'].split(',')[0] or ''" t-att-data-menu="menu['id']" t-att-href="'/web%s#menu_id=%s&amp;action=%s' % (debug_param, menu['id'], menu['action'] and menu['action'].split(',')[1] or '')">
                        <i t-attf-class="fa #{menu.get('icon')} fa-lg fa-fw" t-if="menu.get('icon')"/>
                        <span class="oe_menu_text">
                          <t t-esc="menu['name']"/>
                        </span>
                      </a>
                    </li>
                  </ul>
                </li>
              </ul> <!-- / #oe_applications -->
              <ul>
                <li class="o_menu_brand">Website</li>
              </ul>
              <ul id="oe_systray">
                <!-- Mobile preview -->
                <li class="o_mobile_preview">
                  <a data-action="show-mobile-preview" href="#">
                    <span title="Mobile preview">
                      <i class="fa fa-mobile"/>
                    </span>
                  </a>
                </li>
                <!-- Promote -->
                <li class="dropdown" groups="base.group_website_designer">
                  <a class="dropdown-toggle waves" data-toggle="dropdown" href="#" id="promote-menu-button">
                    <span class="title">PROMOTE</span>
                    <span class="caret"/>
                  </a>
                  <ul class="dropdown-menu oe_promote_menu" role="menu">
                    <li>
                      <a data-action="promote-current-page" href="#">
                        <span title="Promote page on the web">Optimize SEO</span>
                      </a>
                    </li>
                    <li>
                      <a href="https://www.adspike.com">
                        <span title="Optimize your AdWords account">Optimize AdWords Campaign</span>
                      </a>
                    </li>
                  </ul>
                </li>

                <!-- Content -->
                <!-- All the li  after #website_addPage_list will be automatically
                     hidden and cloned to #website_addPage_modal  -->

                <li class="dropdown content" groups="base.group_website_publisher" t-if="editable">
                  <a id="content-menu-button" class="dropdown-toggle waves" data-toggle="dropdown" href="#">CONTENT <span class="caret"></span></a>
                  <ul class="dropdown-menu oe_content_menu" role="menu">
                    <li groups="base.group_website_designer">
                      <a data-action="edit_menu" href="#"><span title="Edit Top Menu">Edit Menu</span></a>
                    </li>
                    <t t-if="deletable">
                      <li>
                        <ul>
                          <li groups="base.group_website_designer">
                            <a href="#" data-action="rename_page">Rename Page</a>
                          </li>
                          <li groups="base.group_website_designer">
                            <a href="#" data-action="delete_page">Delete Page</a>
                          </li>
                        </ul>
                      </li>
                      <li groups="base.group_website_designer"></li>
                    </t>
                    <li id="website_addPage_list"></li>
                    <li groups="base.group_website_designer" class="animated" data-dismiss="modal">
                      <a href="#" data-action="new_page">
                        <i class="fa fa-file-o"/>
                        <p>Empty Page</p>
                      </a>
                    </li>
                  </ul>
                </li>
                <!-- Customize -->
                <li class="dropdown" groups="base.group_website_designer" id="customize-menu">
                  <a class="dropdown-toggle waves" data-toggle="dropdown" href="#" id="customize-menu-button">
                    <span class="title">CUSTOMIZE</span>
                    <span class="caret"/>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li id="html_editor">
                      <a data-action="ace" href="#advanced-view-editor">HTML Editor</a>
                    </li>
                    <li id="theme_customize">
                      <a href="#">Customize Theme</a>
                    </li>
                    <li id="install_apps">
                      <a href="/web#return_label=Website&amp;action=website.action_module_website">Install Apps</a>
                    </li>
                    <li class="divider"/>
                  </ul>
                </li>
                <!-- Help -->
                <li class="dropdown">
                  <a class="dropdown-toggle waves" data-toggle="dropdown" href="#" id="help-menu-button">
                    <span class="title">HELP</span>
                    <span class="caret"/>
                  </a>
                  <ul class="dropdown-menu" id="help-menu" role="menu">
                    <li class="dropdown-header">HELP &amp; TUTORIALS</li>
                  </ul>
                </li>
              </ul> <!-- / #oe_systray -->

              <ul id="oe_editzone" class="right" groups="base.group_website_publisher">
                <li groups="base.group_website_designer">
                  <button data-action="new_page" class="btn primary full" href="#" data-toggle="modal" data-target="#website_addPage_modal">
                    <i class="material-icons">&#xE145;</i>NEW PAGE</button>
                </li>
                <li t-if="not translatable">
                  <button class="btn full accent" data-action="edit" type="button">
                    <i class="material-icons">&#xE254;</i>EDIT PAGE</button>
                </li>
                <li t-if="translatable">
                  <button class="btn full accent btn-xs" data-action="translate" type="button">TRANSLATE</button>
                </li>
                <li t-if="translatable">
                  <a class="btn btn-link" data-action="edit_master" href="#">or Edit Master</a>
                </li>
              </ul> <!-- / #oe_editzone -->

            </nav> <!-- / #website_main_menu_navbar -->
          </div>
        </t>
      </xpath>

      <!-- Add new page/content modal -->
      <xpath expr="//body/div['id=wrawrap']" position="after">
        <div class="modal" id="website_addPage_modal">
          <div class="modal-dialog" data-dismiss="modal">
            <ul class="website_addPage_ul"></ul>
          </div>
        </div>
      </xpath>

    </template>
  </data>
</openerp>
