        <template id="default_page">
                <t t-call="website.layout">
                    <div class="container">
                        <div class="row">
                            <div class="span12">
                                <h1>New Page</h1>
                                <p>Write your text here...</p>
                            </div>
                        </div>
                    </div>
                </t>
