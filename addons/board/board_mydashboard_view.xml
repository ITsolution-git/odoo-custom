<?xml version="1.0"?>
<openerp>
    <data>
        <!--My Dashboard-->
        <record model="ir.ui.view" id="board_my_dash_view">
            <field name="name">My Dashboard</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="My Dashboard" version="7.0">
                    <board style="2-1">
                        <column>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <!--My Dashboard Action-->
        <record model="ir.actions.act_window" id="open_board_my_dash_action">
            <field name="name">My Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_my_dash_view"/>
            <field name="help" type="html">
              <p>
                This is your personal dashboard.
              </p><p>
                To customize it, go to any OpenERP screen, fill in the search
                filter, and click on <i>'Add to Dashboard'</i> in the advanced
                search options.
              </p>
            </field>
        </record> 

        <!--My Dashboard Menu-->
        <menuitem 
            id="menu_board_my_dash"
            parent="base.menu_reporting_dashboard"
            action="open_board_my_dash_action"
            sequence="5"/>
    </data>
</openerp>
