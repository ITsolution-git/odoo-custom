<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>        
        <!--  OpenOffice Report Desinger -->
        
		<record id="view_report_designer" model="ir.ui.view">
            <field name="name">OpenOffice Report Designer</field>
            <field name="model">base.openoffice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Desinger">
				      <group colspan="8" height="250" width="700">
						<separator string="OpenOffice Report Desinger" colspan="4"/>
				    	<field name="base_desinger_url"  widget="url" />
				    	<newline/>
				    	<field name="plugin_file"/>
                		<button name="add_plugin" string="Click To Get the plugin"
                			colspan="1" type="object" icon="gtk-execute" />
						
						<newline/>					
						<field name="pdf_file"/>
				    	<button name="process_pdf_file" string="Click To Documenation"
                			colspan="1" type="object" icon="gtk-execute" />
						<newline/>
						<separator string="Openoffice Report Desinger plugin installation note." colspan="4"/>
                	  	<label colspan="2" string="Save The  plugÂ­in and Documenation read the step to How to install it from Documenation"/>
                    	<button special="cancel" string="Close" icon="gtk-cancel"/>
                	</group>
                </form>
            </field>
        </record>

        <record id="action_report_designer" model="ir.actions.act_window">
            <field name="name">OpenOffice Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.openoffice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
	</data>
</openerp>	        
