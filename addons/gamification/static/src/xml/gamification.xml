<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="mail.Root">
        <t t-jquery="div" t-operation="after">
            <div class="oe_user_sidebar" />
        </t>
    </t>
    <t t-name="user_wall">
        <div class="oe_gamification_goal"/>
    </t>
    <t t-name="goal_list_to_do">
        <div t-foreach="widget.goals_info.info" t-as="plan">
            <h3><t t-esc="plan.name"/></h3>
            <ul class="oe_goals_list">
                <li t-foreach="plan.goals" t-as="goal">
                    <strong><t t-esc="goal.type_name" /></strong>
                    <t t-if="goal.type_description">
                        <p><t t-esc="goal.type_description" /></p>
                    </t>
                    <p><progress t-att-value="goal.completeness" max="100"/></p>
                    <t t-if="goal.computation_mode == 'manually'">
                        <a href="#">done!</a>
                    </t>
                </li>
            </ul>
        </div>
    </t>

</templates>
