                    <field name="name"/>
                    <field name="description"/>
                    <field name="image"/>
                    <field name="stat_my"/>
                    <field name="stat_count"/>
                    <field name="stat_count_distinct"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div tclass="oe_kanban_card oe_kanban_global_click oe_kanban_goal oe_kanban_color_white">
                                <div class="oe_kanban_content">
