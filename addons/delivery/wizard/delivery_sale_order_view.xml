<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  		<record id="view_delivery_sale_order" model="ir.ui.view">
            <field name="name">delivery.sale.order.form</field>
            <field name="model">delivery.sale.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create deliveries">
                	<group colspan="4" >
                		 <separator colspan="4" string="Delivery Method" />
              			 <field name="carrier_id" />
                    </group>
                       	<separator string="" colspan="4" />
                    <group colspan="4" col="6">
                    	<button  icon="gtk-cancel" special="cancel" string="Cancel"/>
                    	<button  icon="gtk-ok" name="delivery_set" string="Add Delivery" type="object"/>
                   </group>
               </form>
            </field>
  		</record>
  		
        <record id="action_delivery_sale_order" model="ir.actions.act_window">
            <field name="name">Delivery Costs</field>
            <field name="res_model">delivery.sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_delivery_sale_order"/> 
           <field name="target">new</field>
        </record>
              
        <act_window id="action_delivery_sale_order_values"
    		key2="client_action_multi" name="Delivery Costs"
    		res_model="delivery.sale.order" src_model="sale.order"
    		view_mode="form" target="new" view_type="form" />
        
    </data>
</openerp>
