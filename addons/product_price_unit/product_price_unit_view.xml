<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!--  Product Form -->
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product_price_unit_form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                   	<field name="price_unit_id" on_change="on_change_price_unit(price_unit_id,standard_price,list_price)"/>
                   	<field name="standard_price_coeff"/>
                   	<field name="list_price_coeff"/>
                </field>
            </field>
        </record>
        
        <!--  Product Tree -->
        <record id="product_product_tree_view_value1" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
	            <field name="qty_available" position="after">
	                <field name="average_price" />
	                <field name="stock_value" sum="Sum Stock Value"/>
	            </field>
            </field>
        </record>
        
        <record id="view_category_property_form_price_unit" model="ir.ui.view">
            <field name="name">product.category.stock.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_category_property_form"/>
            <field name="arch" type="xml">
                <field name="property_stock_journal" position="after">
                    <field name="property_stock_location" domain="[('usage','=','internal')]"/>
                </field>
            </field>
        </record>
        
        <record id="view_category_allow_negative_form" model="ir.ui.view">
            <field name="name">product.category.stock.allow_negative.form.inherit</field>
            <field name="model">product.category</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="view_category_property_form_price_unit"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                  <field name="allow_negative_stock" />
                </field>
            </field>
        </record>
        
        <record id="view_normal_property_form_price_unit" model="ir.ui.view">
            <field name="name">product.normal.stock.property.form.inherit</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_normal_property_form"/>
            <field name="arch" type="xml">
	           <field name="property_stock_inventory" position="after">
	               <field name="property_stock_location" domain="[('usage','=','internal')]" widget="selection"/>
	           </field>
            </field>
        </record>
        
        <record id="view_template_allow_negative_form" model="ir.ui.view">
            <field name="name">product.normal.stock.allow_negative.form.inherit</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="view_normal_property_form_price_unit"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                  <field name="allow_negative_stock" />
                </field>
            </field>
        </record>

		<!--  Invoice Line Form -->
        <record id="view_invoice_line_form1" model="ir.ui.view">
            <field name="name">invoice_price_unit_form</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<field name="product_id" position="replace">
                    <field name="product_id"  on_change="price_product_id_change(product_id, uos_id, quantity, name, parent.type, parent.partner_id, parent.fiscal_position, price_unit, price_unit_id, parent.address_invoice_id, parent.currency_id, {'company_id': parent.company_id})"  colspan="4"/>
                </field>
            </field>
        </record>

        <record id="view_invoice_line_form" model="ir.ui.view">
            <field name="name">invoice_price_unit_form1</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="view_invoice_line_form1"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>

		<!--  Invoice Line Tree -->
        <record id="view_invoice_line_tree" model="ir.ui.view">
            <field name="name">invoice_price_unit_tree</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="discount" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>

		<!--  HR Expense Line Form -->
        <record id="view_expenses_form" model="ir.ui.view">
            <field name="name">hr_expense_line_price_unit_form</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="unit_amount" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>

		<!--  HR Expense Line Tree -->
        <record id="view_expenses_line_tree" model="ir.ui.view">
            <field name="name">hr_expense_line_price_unit_tree</field>
            <field name="model">hr.expense.line</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_line_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="unit_amount" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>
        
        <!--  MRP bom Form -->
        <record id="mrp_bom_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.bom.form.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>
        
        <!--  Sale order Form -->
        <record id="view_sale_order_form_inherit1" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page/field[@name='product_id']" position="replace">
        	       <field colspan="4"
			           context="partner_id=parent.partner_id,quantity=product_uom_qty,pricelist=parent.pricelist_id,shop=parent.shop_id,uom=product_uom"
			           name="product_id"
			           on_change="product_id_change(parent.pricelist_id,price_unit_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, 'lang' in context and context['lang'], True, parent.date_order, product_packaging, parent.fiscal_position)"
			           select="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_sale_order_form_inherit2" model="ir.ui.view">
            <field name="name">sale.order.form.inherit2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page/field[@name='product_uom_qty']" position="replace">
			       <field
			           context="partner_id=parent.partner_id,quantity=product_uom_qty,pricelist=parent.pricelist_id,shop=parent.shop_id,uom=product_uom"
			           name="product_uom_qty"
			           on_change="product_id_change(parent.pricelist_id,price_unit_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, 'lang' in context and context['lang'], False, parent.date_order, product_packaging, parent.fiscal_position, True)"
			           select="1"/>
			     </xpath>
            </field>
        </record>
           
        <record id="view_order_form_inherit5" model="ir.ui.view">
            <field name="name">sale.order.form.inherit5</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page/field[@name='order_line']/form/notebook/page/field[@name='price_unit']" position="after">
                    <field name="price_unit_id"/>
                </xpath>
            </field>
        </record>

		<!--  Purchase Order Line Form -->
        <record id="purchase_order_line_form1" model="ir.ui.view">
            <field name="name">purchase_order_line_price_unit_form</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="price_unit_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_line_form" model="ir.ui.view">
            <field name="name">purchase_order_line_price_unit_form</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase_order_line_form1"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="product_id" position="replace">
                    <field colspan="4" context="partner_id=parent.partner_id,quantity=product_qty,pricelist=parent.pricelist_id,uom=product_uom,warehouse=parent.warehouse_id" name="product_id" on_change="price_product_id_change(parent.pricelist_id,price_unit_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order, parent.fiscal_position)"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
