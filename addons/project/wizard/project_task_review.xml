<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    	<record id="view_project_task_review" model="ir.ui.view">
            <field name="name">Project Task Review</field>
            <field name="model">project.task.review</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              	<form string="Project Task Review">
              	<separator string="Review Task " colspan="4"/>            
                      <group colspan="4">
		                    <field name="user_id" colspan="4"/>
			  				<separator string="Remark" colspan="4"/>   
					  		<newline/>		                    
		                   <field name="description" nolabel="1" colspan="4"/>
                      </group>
		              <group colspan="4" >
		            		<button icon="gtk-close" special="cancel" string="Close"/>
		            		<button icon="gtk-ok" name="review" string="Review" type="object"/>
		              </group>
			  	</form>
            </field>
		</record>
		<record id="action_project_task_review" model="ir.actions.act_window">
	           <field name="name">Project Task Review</field>
	           <field name="type">ir.actions.act_window</field>
	           <field name="res_model">project.task.review</field>
	           <field name="view_type">form</field>
	           <field name="view_mode">form</field>
	           <field name="view_id" ref="view_project_task_review"/>
	           <field name="target">new</field>
    	</record>

    </data>
</openerp>
