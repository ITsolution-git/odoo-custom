        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

     <record model="ir.rule" id="stock_sale_forecast_comp_rule">
        <field name="name">stock_sale_forecast multi-company</field>
