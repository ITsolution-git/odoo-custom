			<field name="inherit_id" ref="base.view_partner_bank_form"/>
			<field name="arch" type="xml">
				<field name="acc_number" position="after">
					<newline/>
					<field name="bvr_number"/>
					<field name="bvr_adherent_num"/>
					<field name="post_number"/>
					<field name="dta_code"/>
				</field>
			</field>
		</record>

	</data>
</openerp>
