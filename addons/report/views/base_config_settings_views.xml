<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base_config_settings_view_form_inherit_report" model="ir.ui.view">
        <field name="name">base.config.settings.inherit.report</field>
        <field name="inherit_id" ref="base_setup.base_config_settings_view_form"/>
        <field name="model">base.config.settings</field>
        <field name="arch" type="xml">
           <div id="business_documents" position="replace">
                <h2>Business Documents</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label string="Format"/>
                            <div class="text-muted">
                                Set the paper format of printed documents
                            </div>
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="paperformat_id" string="Format" class="col-xs-3 col-md-3 o_light_label"/>
                                    <field name="paperformat_id" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="default_custom_report_footer"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Custom Footer" for="default_custom_report_footer"/>
                            <div class="text-muted">
                                Set a custom footer
                            </div>
                            <div class="content-group" attrs="{'invisible': [('default_custom_report_footer', '=', False)]}">
                                <div class="mt16">
                                    <field name="rml_footer"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" groups="base.group_no_one">
                        <div class="o_setting_left_pane">
                            <field name="default_custom_header_footer"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_custom_header_footer"/>
                            <div class="text-muted">
                                Customize header &amp; footer in HTML (advanced)
                            </div>
                            <div class="content-group" attrs="{'invisible': [('default_custom_header_footer', '=', False)]}">
                                <div class="mt16">
                                    <button type="object" name="edit_external_header" string="External Header" icon="fa-arrow-right" class="btn-link"/>
                                </div>
                                <div>
                                    <button type="object" name="edit_external_footer" string="External Footer" icon="fa-arrow-right" class="btn-link"/>
                                </div>
                                <div>
                                    <button type="object" name="edit_internal_header" string="Internal Header" icon="fa-arrow-right" class="btn-link"/>
                                </div>
                                <div>
                                    <button name="%(action_report_internalpreview)d" string="Preview Internal Report" type="action"  icon="fa-arrow-right" class="btn-link"/>
                                </div>
                                <div>
                                    <button name="%(action_report_externalpreview)d" string="Preview External Report" type="action"  icon="fa-arrow-right" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
