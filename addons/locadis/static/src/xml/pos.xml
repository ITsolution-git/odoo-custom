<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductEmptyListWidget">
        <div class='product-list-container'>
            <div class="product-list-scroller product-list-empty">
                <img src="/point_of_sale/static/src/img/scan.png" />
                <p>Please scan your products</p>
            </div>
            <div class="shadow-top"></div>
        </div>
    </t>

    <t t-extend="OrderlineWidget">
        
        <t t-jquery=".info-list" t-operation="append">
            <t t-if="widget.model.product.get('dont_vidange')">
                <li class="info">
                    Vidange: <t t-esc="widget.format_currency(widget.model.product.get('dont_vidange'))" />
                </li>
            </t>
        </t>
    </t>
    
</templates>
