<?xml version="1.0"?>
	<terp>
		<data>
			<record model="ir.ui.view" id="view_wiki_tree">
				<field name="name">base.wiki.tree</field>
				<field name="model">base.wiki</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree string="Wiki">
						<field name="title"/>
						<field name="model_id" string="Authour"/>
						<field name="res_id" string="Created on"/>
						<field name="path"/>
					</tree>
				</field>
			</record>

			<record model="ir.ui.view" id="view_wiki_form">
				<field name="name">base.wiki.form</field>
				<field name="model">base.wiki</field>
				<field name="type">form</field>
				<field name="arch" type="xml">
					<form string="Wiki">
						<notebook>
							<page string="Article">
								<separator string="Wiki Title" colspan="4" />
								<field name="title" nolabel="1" colspan="4" search="1"/>
								<separator string="Wiki Content" colspan="4" />
								<field name="text_area" nolabel="1" colspan="4" search="1"/>
								<field name="minor_edit" search="1"/>
								<field name="summary" search="1"/>
							</page>
							<page string="Html Page">
								<separator string="Html Page" colspan="4" />
								<field name="html" nolabel="1" colspan="4" widget="html_tag"/>
							</page>
							<page string="Tags">
								<separator string="Tags" colspan="4" />
								<field name="tags" nolabel="1" colspan="4" search="1"/>
							</page>
							<page string="History">
								<field name="history_id" mode="tree,form" colspan="4" nolabel="1" select="1">
									<tree string="History">
										<field name="text_area" />
										<field name="modify_by" />
									</tree>
									<form string="History">
										<field name="text_area" colspan="4"/>
										<field name="modify_by" />
										<field name="minor_edit" />
										<field name="summary" colspan="4"/>
									</form>
								</field>
							</page>
						</notebook>
					</form>
				</field>
			</record>

			<record model="ir.actions.act_window" id="action_wiki">
				<field name="name">Wiki Pages</field>
				<field name="res_model">base.wiki</field>
				<field name="view_type">form</field>
				<field name="view_mode">form,tree</field>
				<field name="view_id" ref="view_wiki_tree"/>
			</record>

			<menuitem name="Wiki System/Wiki Pages" id="menu_action_axelor_wiki" action="action_wiki"/>


			<record model="ir.ui.view" id="view_wiki_forum_tree">
				<field name="name">base.wiki.forum.tree</field>
				<field name="model">base.wiki.forum</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree string="wiki forum">
						<field name="title"/>
						<field name="replies"/>
						<field name="wiki_authour"/>
						<field name="last_post"/>
						<field name="by"/>
					</tree>
				</field>
			</record>

			<record model="ir.ui.view" id="view_wiki_history_tree">
				<field name="name">base.wiki.history.tree</field>
				<field name="model">base.wiki.history</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree srting="Wiki History">
						<field name="date_time"/>
						<field name="text_area"/>
						<field name="minor_edit"/>
						<field name="summary"/>
					</tree>
				</field>
			</record>
			
			<record model="ir.ui.view" id="wiki_history_form">
				<field name="name">base.wiki.history.form</field>
				<field name="model">base.wiki.history</field>
				<field name="type">form</field>
				<field name="arch" type="xml">
					<form srting="Wiki History">
						<field name="summary" select="1" colspan="4"/>
						<field name="text_area" select="1" colspan="4"/>
						<field name="date_time" select="1"/>
						<field name="minor_edit" select="1"/>
						<field name="history_wiki_id"/>
					</form>
				</field>
			</record>

			<record model="ir.actions.act_window" id="action_history">
				<field name="name">Wiki History</field>
				<field name="res_model">base.wiki.history</field>
				<field name="view_type">form</field>
				<field name="view_mode">form,tree</field>
				<field name="view_id" ref="wiki_history_form"/>
			</record>

			<menuitem name="Wiki System/History" id="menu_action_history" action="action_history"/>


