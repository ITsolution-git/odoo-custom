            <field name="name">survey.calendar</field>
            <field name="model">survey.survey</field>
            <field name="arch" type="xml">
                <calendar string="Surveys Calendar" date_start="date_open" date_stop="date_close" color="state">
                    <field name="title" />
                </calendar>
            </field>
