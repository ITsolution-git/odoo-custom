                    <field name="designed" />
                    <field name="title" />
                    <field name="date_open" />
                    <field name="tot_sent_survey" />
                    <field name="tot_start_survey" />
                    <field name="tot_comp_survey" />
                    <field name="user_input_limit" />
                    <field name="color" />
                    <field name="state" />
                    <field name="visible_to_user" />
                    <field name="auth_required" />
                    <field name="public_url" />
