<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="crm_stage_tree">
        <field name="name">crm.stage.tree</field>
        <field name="model">crm.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="probability"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_stage_form">
        <field name="name">crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Stage">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="on_change"/>
                        <label for="probability" attrs="{'invisible': [('on_change', '=', False)]}"/>
                        <div attrs="{'invisible': [('on_change', '=', False)]}">
                            <field name="probability"/>
                            <p class="text-muted">
                                A stage will be considered as 'Won' if the probability is 100% and if 'Change Probability Automatically' is true.<br/>
                                A stage will be considered as 'Lost' or 'Dead' if the probability is 0% and if 'Change Probability Automatically' is true.
                            </p>
                        </div>
                    </group>
                    <group>
                        <field name="fold"/>
                    </group>
                </group>
                <separator string="Requirements"/>
                <field name="requirements" nolabel="1"/>
                <field name="team_ids" invisible="1"/>
            </form>
        </field>
    </record>

    <!-- CRM Stage Action -->
    <record id="crm_stage_act" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">crm.stage</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="crm_stage_tree"/>
    </record>
</odoo>
