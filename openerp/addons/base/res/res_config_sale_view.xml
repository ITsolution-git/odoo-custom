<openerp>
    <data>

        <record id="view_config_picking_policy_1" model="ir.ui.view">
            <field name="name">Setup Your Invoicing Method</field>
            <field name="model">sale.config.picking_policy</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sale Configuration">
                    <group string="Picking and Invoice Policy" colspan="4" col="8">
	                    <group  colspan="4" col="4">
	                       <field name="sale_orders" on_change="onchange_order(sale_orders,deli_orders)"/>
	                       <newline/>
	                       <field name="deli_orders" on_change="onchange_order(sale_orders,deli_orders)"/>
	                       <newline/>
	                       <field name="task_work"/>
	                       <newline/>
	                       <field name="timesheet"/>
	                       <newline/>
	                    </group>
	                    <group colspan="4" col="4">
	                        <newline/>
	                        <field name="order_policy" attrs="{'invisible':['|',('sale_orders','!=',True),('deli_orders','!=',True)]}"/>
                            <newline/>
                            <field name="charge_delivery" attrs="{'invisible':[('sale_orders','!=',True), ('deli_orders','!=',True)]}"/>
		                    <newline/>
		                    <field name="picking_policy" />
		                    <newline/>
		                </group>
	                </group>

                    <group string="Sale Order" colspan="4" col="8">
                        <group  colspan="4" col="4">
                           <field name="group_sale_pricelist_per_customer"/>
                           <newline/>
                           <field name="tax_policy"/>
                           <field name="tax_value" nolabel="1"/>
                           <newline/>
                           <field name="sale_margin"/>
                           <newline/>
                           <field name="group_sale_alerts_per_customer_products"/>
                           <newline/>
                        </group>
                        <group colspan="4" col="4">
                            <newline/>
                            <field name="group_sale_uom_per_product"/>
                            <newline/>
                            <field name="group_sale_delivery_address"/>
                            <newline/>
                            <field name="group_sale_disc_per_sale_order_line"/>
                            <newline/>
                            <field name="group_sale_notes_subtotal"/>
                            <newline/>
                            <field name="sale_journal"/>
                            <newline/>
                        </group>
                    </group>

	                <group>
                            <button string="Cancel" icon="gtk-cancel" special="cancel" />
                            <button string="Apply" icon="gtk-apply" name="apply_cb" type="object" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_config_picking_policy" model="ir.actions.act_window">
            <field name="name">Setup your Invoicing Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.config.picking_policy</field>
            <field name="view_id" ref="view_config_picking_policy_1"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

    <menuitem id="sale_menu_config_11" name="Sale" parent="base.menu_config" sequence="1" action="action_config_picking_policy"/>

    </data>
</openerp>
