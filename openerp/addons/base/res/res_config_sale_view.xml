<openerp>
    <data>

        <record id="view_config_picking_policy" model="ir.ui.view">
            <field name="name">Sales Application</field>
            <field name="model">sale.config.picking_policy</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sale Configuration">
                    <separator string="Contracts" colspan="4"/>
                    <group  colspan="4" col="8">
                        <group  colspan="4" col="4">
                           <field name="analytic_user_function"/>
                           <newline/>
                           <field name="analytic_journal_billing_rate"/>
                           <newline/>
                        </group>
                    </group>
                    
                    <separator string="Emails" colspan="8"/>
                    <group col="8" colspan="4">
                        <field name="create_leads" colspan="4"/>
                        <group col="4" colspan="4" attrs="{'invisible': [('create_leads','=',False)]}">
                            <group col="8" colspan="4">
                                <field name="server"/>
                                <field name="type" nolabel="1" on_change="onchange_server_type(type, is_ssl)"/>
                                <field name="port"/>
                                <field name="is_ssl" on_change="onchange_server_type(type, is_ssl)"/>
                            </group>
                            <newline/>
                            <group col="4" colspan="2">
                                <field name="user"/>
                                <field name="password"/>
                            </group>
                        </group>
                        <group col="4" colspan="4">
                            <field name="plugin_thunderbird"/>
                            <newline/>
                            <field name="plugin_outlook"/>
                        </group>
                    </group>

                    <separator string="Import and Synchronize data from an other application" colspan="4"/>
                    <group  colspan="4" col="8">
                        <group  colspan="4" col="4">
                           <field name="import_sugarcrm"/>
                           <newline/>
                           <field name="import_google"/>
                           <newline/>
                        </group>
                        <group  colspan="4" col="4">
                           <newline/>
                           <field name="crm_caldav"/>
                           <newline/>
                        </group>
                    </group>

                    <separator string="Documents and Wiki" colspan="4"/>
                    <group  colspan="4" col="8">
                        <group  colspan="4" col="4">
                           <newline/>
                           <field name="wiki_sale_faq" />
                           <newline/>
                        </group>
                    </group>

                    <separator string="Customer Form" colspan="4"/>
                    <group colspan="4" col="8">
                        <group  colspan="4" col="4">
                           <field name="crm_partner_assign"/>
                           <newline/>
                           <field name="google_map"/>
                           <newline/>
                        </group>
                    </group>

                </form>
            </field>
        </record>

        <record id="action_config_picking_policy" model="ir.actions.act_window">
            <field name="name">Configure different Sales Applications</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.config.picking_policy</field>
            <field name="view_id" ref="view_config_picking_policy"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

    <menuitem id="sale_menu_config_11" name="Sales" parent="base.menu_config" sequence="1" action="action_config_picking_policy"/>

    </data>
</openerp>
